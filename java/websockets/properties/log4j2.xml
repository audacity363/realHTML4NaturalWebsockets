<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="rh4n" target="SYSTEM_OUT">
        	<PatternLayout pattern="%d [%-6p] %c - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
